{
    "name": "siegsb/play-extractor",
    "type": "library",
    "description": "Extracts info from Play Store easily like an API",
    "keywords": [
        "google",
        "play store",
        "api",
        "redinput",
        "siegsb"
    ],
    "homepage": "https://github.com/siegsb/play-extractor",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "RedInput",
            "homepage": "https://github.com/RedImput",
            "role": "Developer"
        },
        {
            "name": "Paris Niarfe Baltazar Salguero",
            "email": "sieg.sb@gmail.com",
            "homepage": "https://pbaltazar.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/siegsb/play-extractor/issues",
        "source": "https://github.com/siegsb/play-extractor/releases"
    },
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8",
        "squizlabs/php_codesniffer": "^2.3",
       "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-4": {
            "SiegSB\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
